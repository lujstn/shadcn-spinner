{
  "name": "shadcn-spinner-root",
  "description": "A spinner component for Shadcn - Displays an animated loading indicator, inspired by the Radix UI spinner design.",
  "version": "0.1.0",
  "private": false,
  "scripts": {
    "dev": "pnpm --filter shadcn-spinner-site dev",
    "build": "NODE_ENV=production pnpm --filter shadcn-spinner build && NODE_ENV=production pnpm --filter shadcn-spinner-site build",
    "start": "pnpm --filter shadcn-spinner-site start",
    "lint": "pnpm --filter shadcn-spinner-site lint"
  },
  "exports": {
    ".": "./lib/spinner.tsx",
    "./spinner": "./lib/spinner.tsx"
  },
  "files": [
    "lib/"
  ],
  "devDependencies": {
    "@types/node": "^24",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "typescript": "^5"
  },
  "peerDependencies": {
    "react": "^16.8 || ^17.0 || ^18.0 || ^19.0",
    "react-dom": "^16.8 || ^17.0 || ^18.0 || ^19.0"
  },
  "pnpm": {
    "overrides": {
      "react": "19.1.0",
      "react-dom": "19.1.0",
      "react-is": "^19.0.0-rc-69d4b800-20241021"
    }
  }
}
